<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.jsandi.cafeteria" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#D5BFBF</item>
        <item name="colorPrimaryVariant">#D5BFBF</item>
        <item name="colorOnPrimary">#9E7676</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#D5BFBF</item>
        <item name="colorSecondaryVariant">#D5BFBF</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.jsandi.cafeteria.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.jsandi.cafeteria.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.jsandi.cafeteria.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>